@model IEnumerable<GeneralStoreMVC.Models.Customer.CustomerIndexModel>

<h1 class="text-center">All Customers</h1>
<a href="/customer/create" class="text-primary">Create a customer</a>

<table class="table table-striped table dark">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td></td>
                </tr>
            }
    </tbody>
</table>

